<div class="chatroom">
  <h2>CHATROOM</h2>
  <div class="chatroom_users">
    <h3>Chatroom users:</h3>
    <% @chatroom_users.each do |chatroom_user| %>
      <%= chatroom_user.user.username %>
    <% end %>
  </div>

  <br>
  <div class="messages" data-id="<%= @chatroom.id %>">
    <% @messages.each do |message| %>
        <div><strong><%= message.user.username %>:</strong> <%= message.body %></div>
    <% end %>
  </div>

  <%= form_for [@chatroom, Message.new] do |f| %>
      <%= f.text_area :body, rows: 1, autofocus: true %>
  <% end %>
</div>