<% if Like.find_by(likeable: @comment, user: @user) %>
  $(".comment_like_<%= @comment.id %>").html("<%= escape_javascript(render 'comments/unlike', user: @user, comment: @comment) %>");
<% else %>
  $(".comment_unlike_<%= @comment.id %>").html("<%= escape_javascript(render 'comments/like', user: @user, comment: @comment) %>");
<% end %>

$('.comment_likers_<%=@comment.id%>').html("<%= @comment.likes.count %>");