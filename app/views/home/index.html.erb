<div class="home">

  <div class="add clearfix" id="new_post">
    <%= form_for [current_user, Post.new], html: { multipart: true }, remote: true, :authenticity_token => true do |f| %>

        <div class="field">
          <%= f.text_area :content, class: 'content_area' %>
        </div>

        <div class="field avatar_button">
          <%= f.label :image, class: 'fileContainer' do %>
              <span class="tooltip">Add image</span>
              <%= f.file_field :image, class: 'post_image' %>
          <% end %>
          <div><img class="image_upload_preview" /></div>

        </div>

        <%= f.submit 'Add Post', id: 'add_post', data: { current_user_id: current_user.id } %>
    <% end %>
  </div>

  <h2 class="toggle">Add post</h2>

  <div class="posts">
    <%= render @posts %>
  </div>

  <div class="pag"><%= will_paginate @posts %></div>
</div>