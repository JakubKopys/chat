<div class="user posts">
  <%= @user.username %>
  <%= image_tag @user.avatar.url(:big) %>
  Current user id: <%= current_user.id %> | User id: <%= @user.id %>
  <% if current_user.requested_friendship?(@user) %>
    Friendship request sent.
  <% elsif current_user.request_pending?(@user) %>
    <%= link_to 'Accept request', user_friendship_path(@user.id, current_user.get_friendship(@user)), method: :put%>
    <%= link_to 'Refuse request', user_friendship_path(current_user, current_user.get_friendship(@user)), method: :delete %>
  <% elsif !current_user.is_friends_with?(@user) && current_user != @user%>
      <%= link_to 'Add Friend', user_friendships_path(@user.id), method: :post %>
  <% end %>
  <%= render partial: 'posts/post', collection: @posts %>
</div>